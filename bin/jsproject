resolver.addClassName("qx.core.Object")
classes = resolver.getIncludedClasses()
print("DEPS1: %s" % resolver.getRecursiveDeps("qx.Class"))
#sortedClasses = resolver.getSortedClasses()










sys.exit(0)



    
